<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Agr_NameNotNull</fullName>
    <active>true</active>
    <description>O nome do Lead deve ser preenchido.</description>
    <errorConditionFormula>OR(
ISBLANK( FirstName ),
ISBLANK( LastName )
)</errorConditionFormula>
    <errorDisplayField>LastName</errorDisplayField>
    <errorMessage>Favor, preencher o campo Nome completo.</errorMessage>
</ValidationRule>
